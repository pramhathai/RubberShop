<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorbg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/toolbarRegister">
    </android.support.v7.widget.Toolbar>

    <!--Content-->
    <LinearLayout
        android:background="#b4ffffff"
        android:padding="@dimen/margin"
        android:layout_margin="@dimen/margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Logo-->
        <ImageView
            android:layout_width="68dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <!--Name Store-->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--ICon-->
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Text Name-->
            <EditText
                android:hint="@string/name_store"
                android:id="@+id/edtNameStore"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <!--Id Store-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--ICon-->
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_idstore" />

            <!--Text Name-->
            <EditText
                android:id="@+id/edtIdStore"
                android:inputType="text"
                android:hint="@string/id_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent" />

        </LinearLayout>


        <!--Password-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--ICon-->
            <ImageView
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_password" />

            <!--Text Name-->
            <EditText
                android:id="@+id/edtPassword"
                android:inputType="textPassword"
                android:hint="@string/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

        <!--Button-->
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--Save Button-->
            <Button
                android:textSize="@dimen/h2"
                android:textColor="#ffffff"
                android:background="@color/colorAccent"
                android:id="@+id/btnSave"
                android:text="บันทึก"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <!--Cancel-->
            <Button
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/h2"
                android:textColor="#ffffff"
                android:background="#b4000000"
                android:id="@+id/btnCancel"
                android:text="ยกเลิก"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>